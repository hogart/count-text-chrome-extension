{
  "manifest_version": 2,
  "name": "count(text)",
  "description": "Shows word and characters count and some other info on any selected text (context menu).",
  "version": "2.0.1",
  "permissions": ["contextMenus", "notifications", "http://*/*", "https://*/*"],
  "background": {
    "persistent": false,
    "scripts": ["calculateStats.js", "bg.js"]
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "offline_enabled": true,
  "default_locale": "en",
  "content_scripts": [
  ]
}

