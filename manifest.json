{
  "name": "count(text)",
  "description": "Simple text stats: characters, words, etc. Constantly shows word and characters count on Evernote Web, but can be used to show advanced text info on any selected text (through context menu).",
  "version": "0.1",
  "permissions": ["contextMenus", "notifications", "tabs", "storage", "http://*/*", "https://*/*"],
  "background": {
    "persistent": false,
    "scripts": ["calculateStats.js", "bg.js"]
  },
  "manifest_version": 2,
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "offline_enabled": true,
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://www.evernote.com/Home.action*"],
      "js": ["calculateStats.js", "ew.js"],
      "css": ["ew.css"]
    }
  ]
}

